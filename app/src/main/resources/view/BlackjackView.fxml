<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="278.0" prefWidth="373.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaceGraphique.BlackjackController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="soldeLabel" text="Solde : 0 €" />
    <TextField fx:id="miseField" promptText="Entrez votre mise" />
    <Label fx:id="mainJoueurLabel" text="Main joueur : " />
    <Label fx:id="mainCroupierLabel" text="Main croupier : " />

    <HBox spacing="10">
        <Button fx:id="tirerButton" onAction="#tirer" text="Tirer" />
        <Button fx:id="resterButton" onAction="#rester" text="Rester" />
    </HBox>

    <Label fx:id="resultatLabel" text="Résultat" />
    <Button onAction="#quitter" text="Quitter" />
</VBox>
